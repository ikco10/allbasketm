<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle"
            android:tint="@color/thumb">

            <corners android:radius="8dp" />

            <padding
                android:bottom="18dp"
                android:left="7dp"
                android:right="7dp"
                android:top="5dp" />

            <size
                android:width="16dp"
                android:height="29dp" />

            <solid android:color="@android:color/white" />
        </shape>

    </item>

    <item>

        <shape

            android:shape="rectangle"
            android:tint="#FFFFFF">

            <corners android:radius="8dp" />

        </shape>

    </item>
</layer-list>